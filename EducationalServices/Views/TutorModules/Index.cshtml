@model IEnumerable<EducationalServices.Models.TutorModule>

@{
    ViewBag.Title = "Assigned Modules";
}

<h2>Assigned Modules</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Assign Module", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Module.Subject)
        </th>
        <th>
            Tutor Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Module.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.TutorModuleId })
                    <br />
                    @Html.ActionLink("Details", "Details", new { id = item.TutorModuleId })
                    <br />
                    @Html.ActionLink("Delete", "Delete", new { id = item.TutorModuleId })
                }
                else
                {
                    @Html.ActionLink("Details", "Details", new { id = item.TutorModuleId })
                }
            </td>
        </tr>
    }

</table>