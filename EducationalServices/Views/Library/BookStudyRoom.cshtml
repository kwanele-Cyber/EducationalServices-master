@{
    ViewBag.Title = "Book Study Room";
}

<h2>Book a Study Room</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form action="@Url.Action("BookStudyRoom", "Library")" method="post">
    <div class="form-group">
        <label for="startTime">Start Time</label>
        <input type="datetime-local" name="startTime" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="durationInHours">Duration (hours)</label>
        <input type="number" name="durationInHours" class="form-control" min="1" required />
    </div>
    <button type="submit" class="btn btn-primary">Book</button>
</form>
