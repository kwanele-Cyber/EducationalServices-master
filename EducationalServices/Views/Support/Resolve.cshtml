@model EducationalServices.Models.SupportRequest

<h2>Resolve Support Request</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <strong>Issue:</strong>
        <p>@Model.Issue</p>
    </div>

    <div class="form-group">
        <label for="resolution">Resolution:</label>
        <textarea name="resolution" id="resolution" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Resolve Request</button>
}
