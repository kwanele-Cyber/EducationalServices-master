@model IEnumerable<EducationalServices.Models.QuizRatingDisplayViewModel>

@{
    ViewBag.Title = "All Quiz Ratings";
}

<h2>All Quiz Ratings</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Quiz</th>
            <th>Student</th>
            <th>Rating</th>
            <th>Comment</th>
            <th>Date Rated</th>
            <th>Score</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rating in Model)
        {
            <tr>
                <td>@rating.QuizTitle</td>
                <td>@rating.StudentName</td>
                <td>
                    @for (int i = 0; i < rating.Rating; i++)
                    {
                        <i class="fas fa-star text-warning"></i>
                    }
                    @for (int i = rating.Rating; i < 5; i++)
                    {
                        <i class="far fa-star text-warning"></i>
                    }
                    (@rating.Rating)
                </td>
                <td>@rating.Comment</td>
                <td>@rating.DateRated.ToString("g")</td>
                <td>@rating.Score</td>
                <td>
                    @Html.ActionLink("View Quiz", "Details", new { id = rating.QuizId }, new { @class = "btn btn-sm btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p>No ratings have been submitted yet.</p>
}

<div class="mt-3">
    @Html.ActionLink("Back to Quizzes", "Index", null, new { @class = "btn btn-secondary" })
</div>
